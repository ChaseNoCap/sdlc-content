  "keywords": [
    "sdlc",
    "templates",
    "knowledge-base",
    "markdown",
    "documentation",
    "metagothic"
  ],
  "author": "ChaseNoCap",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "inversify": "^6.0.2",
    "js-yaml": "^4.1.0",
    "marked": "^11.1.1",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^1.2.1"
  },
  "peerDependencies": {
    "@chasenocap/file-system": "^1.0.0",
    "@chasenocap/logger": "^1.0.0"
