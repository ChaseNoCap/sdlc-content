{
  "name": "@chasenocap/sdlc-content",
  "version": "1.0.0",
  "description": "SDLC templates and knowledge base for metaGOTHIC framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
